<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_above="@+id/one_hour"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_launcher_background" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitcoin"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leftBrace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coin_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rightBrace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textSize="12sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_value"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market Cap:  "
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/market_value"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume 24h: "
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vol_value"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/one_hour"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="1h: "
                android:textSize="12sp"
                android:layout_weight="1"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/one_hour_value"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:text="1.08%"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/twenty_four"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="24h: "
                android:textSize="12sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/twenty_four_value"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:text="1.16%"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="7dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/seven_day"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="7d: "
                android:textSize="12sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/seven_day_value"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:text="6.98%"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
